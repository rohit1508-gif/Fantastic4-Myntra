<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="0 Points"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:id="@+id/tvPoints"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="30sec"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/tvTimer"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvTimer"
        android:id="@+id/tvQuestion"
        tools:text="This is question segment"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion"
        android:id="@+id/ivQuestion"
        tools:src="@drawable/ic_launcher_background"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvOption1"
        app:layout_constraintTop_toBottomOf="@id/ivQuestion"
        android:layout_margin="10dp"
        tools:text="Option1"
        android:textSize="18dp"
        android:gravity="center"
        android:background="@drawable/boardcardview"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvOption2"
        app:layout_constraintTop_toBottomOf="@id/tvOption1"
        android:layout_margin="10dp"
        tools:text="Option2"
        android:textSize="18dp"
        android:gravity="center"
        android:background="@drawable/boardcardview"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvOption3"
        app:layout_constraintTop_toBottomOf="@id/tvOption2"
        android:layout_margin="10dp"
        tools:text="Option3"
        android:textSize="18dp"
        android:gravity="center"
        android:background="@drawable/boardcardview"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvOption4"
        app:layout_constraintTop_toBottomOf="@id/tvOption3"
        android:layout_margin="10dp"
        tools:text="Option4"
        android:textSize="18dp"
        android:gravity="center"
        android:background="@drawable/boardcardview"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/button"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvOption4" />
</androidx.constraintlayout.widget.ConstraintLayout>